// section main-form
section.main-form
  .owl-carousel.owl-theme.form-carousel
    .item
      img.w-100(src="assets/img/home/form/form-bg.jpg", alt="")
  |
  |
  .form-container
    .container
      .wrap-from
        input#lang(type='hidden', value='vi-VN')
        .form-group
          span FROM
          .wrap
            input.form-control(type="text" placeholder="Nhập thành phố hoặc sân bay").nice-select-filter
            select.form-control(name='location', data-placeholder='Nhập thành phố hoặc sân bay', style='width:100%;', tabindex='2')
              option(value='0') Nhập thành phố hoặc sân bay
              option(value='47') An Giang
              |                                                                                     
              option(value='20') B&agrave; R&#x1ECB;a - V&utilde;ng T&agrave;u
              |                                                                                     
              option(value='62') B&#x1EA1;c Li&ecirc;u
              |                                                                                     
              option(value='25') B&#x1EAF;c Giang
        |
        |
        .form-group
          span TO
          .wrap
            input.form-control(type="text" placeholder="Nhập thành phố hoặc sân bay").nice-select-filter
            select.form-control(name='location', data-placeholder='Nhập thành phố hoặc sân bay', style='width:100%;', tabindex='2')
              option(value='0') Nhập thành phố hoặc sân bay
              option(value='47') An Giang
              |                                                                                     
              option(value='20') B&agrave; R&#x1ECB;a - V&utilde;ng T&agrave;u
              |                                                                                     
              option(value='62') B&#x1EA1;c Li&ecirc;u
              |                                                                                     
              option(value='25') B&#x1EAF;c Giang
      |
      |
      .row.form-calendar
        .col-md-3
          .form-group
            span: i.fa.fa-calendar(aria-hidden='true')
            input#txtDepartureDate.form-control.TextBox(name='ctl00$MainContent$uclSearchBox$txtDepartureDate', type='text', value='27/10/2017', autocomplete='off')
        |
        |
        .col-md-3
          .form-group
            span: i.fa.fa-calendar(aria-hidden='true')
            input#txtReturnDate.form-control.TextBox(name='ctl00$MainContent$uclSearchBox$txtReturnDate', type='text', value='30/10/2017', autocomplete='off')
        |
        |
        .col-md-2
          .form-group
            span.ticket Người lớn
            select.form-control
              option(data-display='1') 1
              |   
              option(value='2') 2
              |   
              option(value='4') 3
        |
        |
        .col-md-2
          .form-group
            span.ticket Trẻ em
            select.form-control
              option(data-display='0') 0
              |   
              option(value='1') 1
              |   
              option(value='2') 2
        |
        |
        .col-md-2
          .form-group
            span.ticket Em bé
            select.form-control
              option(data-display='0') 0
              |   
              option(value='1') 1
              |   
              option(value='2') 2
    
    
